# Compile TypeScript code
compile:
    tsc kafka-producer.ts

# Run the program
run:
    node kafka-producer.js --schema /path/to/schema/file --payload /path/to/payload/file --topic my-topic

# Build a Docker image
docker-build:
    docker build -t my-image .

# Push a Docker image to Docker Hub
docker-push:
    docker tag my-image my-username/my-repo:my-tag
    docker push my-username/my-repo:my-tag
